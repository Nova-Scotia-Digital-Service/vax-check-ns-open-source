<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:helpers="clr-namespace:VaxCheckNS.Mobile.Helpers" 
    xmlns:vm="clr-namespace:VaxCheckNS.Mobile.ViewModels"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	Shell.NavBarIsVisible="False"
	Shell.NavBarHasShadow="False"
    Shell.TabBarIsVisible="False"
    x:Class="VaxCheckNS.Mobile.Views.TermsOfUsePage">

    <ContentPage.BindingContext>
        <vm:TermsOfUseViewModel x:Name="vm" />
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <FlexLayout Direction="Column"
                    Margin="0">

            <BoxView Color="{StaticResource PrimaryColor}"
                     FlexLayout.Basis="2.5%"
                     FlexLayout.AlignSelf="Stretch"
                     FlexLayout.Shrink="0"/>

            <WebView FlexLayout.Basis="85%"
                     Source="https://support.novascotia.ca/privacy/verify-pov-application/"/>

            <BoxView Color="{StaticResource PrimaryColor}"
                     FlexLayout.Basis="2.5%"
                     FlexLayout.AlignSelf="Stretch"
                     FlexLayout.Shrink="0"/>

            <StackLayout Spacing="15"
                         FlexLayout.Basis="7.5%"
                         BackgroundColor="{StaticResource PrimaryColor}">

                <FlexLayout Direction="Row"
                            Margin="0"
                            BackgroundColor="{StaticResource PrimaryColor}">

                    <Button FlexLayout.Basis="50%"
                            AutomationId="DeclineButtonText"
                            Text="{helpers:TranslationHelper DeclineButtonText}"
                            Padding="20,10"
                            Margin="10, 0"
						    FontSize="16"
						    FontAttributes="Bold"
						    CornerRadius="8"
                            BorderWidth="1"
                            BorderColor="{StaticResource BackgroundColor}"
						    BackgroundColor="{StaticResource PrimaryColor}"
						    TextColor="{StaticResource BackgroundColor}"
						    Command="{Binding DeclineCommand}"
						    FlexLayout.AlignSelf="Center"/>

                    <Button FlexLayout.Basis="50%"
                            AutomationId="AcceptButtonText"
                            Text="{helpers:TranslationHelper AcceptButtonText}"
                            Padding="20,10"
                            Margin="10, 0"
						    FontSize="16"
						    FontAttributes="Bold"
						    CornerRadius="8"
                            BorderWidth="1"
                            BorderColor="{StaticResource BackgroundColor}"
						    BackgroundColor="{StaticResource BackgroundColor}"
						    TextColor="{StaticResource PrimaryColor}"
						    Command="{Binding AcceptCommand}"
						    FlexLayout.AlignSelf="Center"/>

                </FlexLayout>
            </StackLayout>

            <BoxView Color="{StaticResource PrimaryColor}"
                     FlexLayout.Basis="2.5%"
                     FlexLayout.AlignSelf="Stretch"
                     FlexLayout.Shrink="0"/>

        </FlexLayout>
    </ContentPage.Content>
</ContentPage>
